{
  "name": "Alexa Server",
  "description": "Simple backend to serve Alexa skills",
  "repository": "https://github.com/travega/alexa-server",
  "logo": "https://m.media-amazon.com/images/G/01/mobile-apps/dex/avs/docs/ux/branding/mark1._TTH_.png",
  "keywords": ["node", "express", "heroku", "alexa", "mongo", "heroku connect", "postgres"],
  "addons": [
    "mongolab",
    "heroku-postgresql:hobby-basic",
    "herokuconnect:demo",
    "logdna:quaco",
    "heroku-redis:hobby-dev"
  ],
  "env": {
    "SF_USERNAME": {
      "mandatory": true
    },
    "SF_PASSWORD": {
      "mandatory": true
    },
    "SF_TOKEN": {
      "mandatory": true
    },
    "SF_CLIENT_ID": {
      "mandatory": true
    },
    "SF_CLIENT_SECRET": {
      "mandatory": true
    },
    "SF_AUTH_REDIRECT_URL": {
      "mandatory": true
    }
  }
}
